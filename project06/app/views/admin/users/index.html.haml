#main
	%h2
		= pluralize( User.count, "User")

	%table
		%tr
			%th Name
			%th Username
			%th Last Login
			%th Number of Games
			%th
		- @users.each do |user|
			%tr
				%td=h link_to user.get_name, edit_admin_user_path(user)
				%td=h user.username 
				%td=h user.current_login_at.strftime("%b. %d, %Y - %I:%M %p")
				%td= get_num_games(user.id)
				%td= link_to image_tag("delete.png", :border => 0), admin_user_path(user), :title => "Delete user", :confirm => 'Are you sure?', :method => :delete

	%p= will_paginate @articles