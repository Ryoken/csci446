#article_main
	%h2
		Artic.le Authors
		= link_to image_tag("add.png", :border => 0), new_author_path, :title => "Create a new author"

	%table
		%tr
		- @authors.each do |author|
			%tr
				%td= author.name
				%td= link_to 'Show', author
				%td= link_to 'Edit', edit_author_path(author)
				%td= link_to 'Destroy', author, :confirm => 'Are you sure?', :method => :delete
	%p= will_paginate @articles