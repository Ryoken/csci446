<div id="article_main">
	<%= link_to image_tag("arrow_left.png", :border => 0) + " list all articles", articles_path, :title => "Back to article listing"%>
	<h2>Editing '<%=h @article.title %>'</h2>
	<% form_for(@article) do |f| %>
	<%= f.error_messages %>
	<div id="article_edit">
		<p>
			<%= f.label :title %><br />
			<%= f.text_field :title %>
		</p>
		<p>
			<%= f.label :author %><br />
			<%= f.text_field :author %>
		</p>
		<p>
			<%= f.label :body %><br />
			<%= f.text_area :body %>
		</p>
		<p>
			<%= f.submit 'Save Changes' %>
		</p>
	<% end %>
	</div>
</div>