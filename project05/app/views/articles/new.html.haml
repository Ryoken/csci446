#article_main
	%h2 New Article
	- form_for(@article) do |f|
		= f.error_messages
		%p
			= f.label :title
			%br/
			= f.text_field :title
		%p
			= f.label :author
			%br/
			= f.text_field :author
		%p
			= f.label :body
			%br/
			= f.text_area :body
		%p= f.submit "Create"
	= link_to "Back", articles_path