#article_list
	%h2
		All the World's
		= pluralize( Article.count, "Article")
		= link_to image_tag("add.png", :border => 0), new_article_path, :title => "Create a new article"
	%table
		%thead
			%th.title Title
			%th.author Author
			%th.body Body
			%th.created Created
			%th.link
			%th.link
			%th.link
			%th.link
		%tbody
			- @articles.each do |article|
				%tr{:class => cycle('list_odd', 'list_even')}
					%td.title=h article.title
					%td.author=h article.author
					%td.body=h article.body
					%td.created=h article.created
					%td= link_to image_tag("magnifier.png", :border => 0, :title => "View Article"), article
					%td= link_to image_tag("page_edit.png", :border => 0, :title => "Edit Article"), edit_article_path(article)
					%td= link_to image_tag("delete.png", :border => 0, :title => "Delete Article"), article, :confirm => 'Are you sure you wish to delete this article?', :method => :delete
	%p= will_paginate @articles