<div id="article_show">

	<%= link_to image_tag("arrow_left.png", :border => 0) + " list all articles", articles_path, :title => "Back to article listing"%>
	<h2>
		<%=h @article.title %>
		<%= link_to image_tag("page_edit.png", :border => 0, :title => "Edit Article"), edit_article_path(@article) %>
		<%= link_to image_tag("delete.png", :border => 0, :title => "Delete Article"), @article, :confirm => 'Are you sure you wish to delete this article?', :method => :delete %>
		<%= mail_to "", image_tag("email.png", :border => 0, :title => "Email Article"), :subject => @article.title + " from Articl.es", :body => "View this article at http://articl.es/articles/" + @article.id.to_s %>
	</h2>	
	<div id="article_show_author">
		<%=h "by " + @article.author + ".  " + @article.edits.to_s + " edits since " + @article.created %>
	</div>
	<br/>
	<div id="article_body">
		<%=h simple_format(@article.body) %>
	</div>
</div>